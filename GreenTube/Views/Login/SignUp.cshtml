
@{
    ViewBag.Title = "SignUp";
}

<head>
    <script>
        function validations(form) {
            var p1 = form._password.value;
            var p2 = form._passwordconfirm.value;
            var em = form._useremail.value;

            var re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            //check email for validity
            if (!re.test(em)) {
                alert("Invalid email.");
                form._useremail.focus();
                return false;
            }



            //at least 1 upper case
            if (!p1.match(/[A-Z]/)) {
                alert("Password must contain atleast one uppercase letter.");
                form._password.focus();
                return false;

            }

            //password has number?
            if (!p1.match(/\d+/g)) {
                alert("Password must contain at least one number");
                form._password.focus();
                return false;
            }
            //password is between 8 and 16 letters
            if (p1.length < 8 || p1.length > 16) {
                alert("Password must be 8-16 characters long");
                form._password.focus();
                return false;
            }


            //password match with confirm password
            if (p1 != p2) {
                alert("\nPassword did not match. Please try again");
                form._passwordconfirm.focus();
                return false;
            }

            return true;
        }
    </script>

</head>

<h1>
    <img src="http://tiny.cc/9cwt5y" alt="IMG" align="middle" style="width:200px;height:200px;display: block;margin-left: auto;margin-right: auto;">
</h1>
<h4 align="middle">
    <font face="verdana" color="green"> Join <b>The GreenTube</b> Community!</font>
</h4>
<h6 align="middle">
    <font face="verdana" color="green">Where you find an appropriate audience for your Video.</font>
</h6>

<div class="jumbotron mbox" id="blackBox">
    <form class="mform" _lpchecked="1" runat="server" action="../Login/AddUser" onsubmit="return validations(this)" method="post">
        <fieldset>

            <div class="form-group">
                <label for="_name">Name (*)</label>
                <input required type="text" class="form-control" name="_name" id="_name" placeholder="First Name Last Name" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
            </div>


            <div class="form-group">
                <label for="_useremail">Email address (*)</label>
                <input required type="text" class="form-control" name="_useremail" id="_useremail" aria-describedby="emailHelp" placeholder="Enter email" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                <small id="emailComment" class="form-text text-muted">enter your email here.</small>
            </div>

            <div class="form-group">
                <label for="userName">Username (*)</label>
                <input required type="text" class="form-control" name="userName" id="userName" aria-describedby="emailHelp" placeholder="Your Personalized Name" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                <small id="emailComment" class="form-text text-muted">The username should be unique!</small>
            </div>


            <div class="form-group">
                <label for="_password">Password (*)</label>
                <input required type="password" minlength="8" class="form-control" name="_password" id="_password" placeholder="Password" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
            </div>

            <div class="form-group">
                <label for="_passwordconfirm">Re-Enter Password (*)</label>
                <input required type="password" minlength="8" class="form-control" name="_passwordconfirm" id="_passwordconfirm" placeholder="Password" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
            </div>

            <div class="form-group">
                <label for="_date">Date of Birth</label>
                <input required type="date" class="form-control" name="_date" id="_date" />
                <small id="emailComment" class="form-text text-muted">Juvenile audience cannot be creators.</small>
            </div>


            <button type="submit" class="btn btn-primary btn-danger btn-lg btn-block" id="_submit">SUBMIT</button>
        </fieldset>
    </form>
</div>



