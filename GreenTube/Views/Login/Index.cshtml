
@{
    ViewBag.Title = "Login";
}

<head>
    <link rel="stylesheet" href="~/Content/loginPage.css" />

</head>


<div class="jumbotron mbox" id="blackBox">
    <form class="mform" _lpchecked="1" runat="server" action="../Login/Authenticate" method="post">
        <fieldset>
            <h1>
                <img src="http://tiny.cc/9cwt5y" alt="IMG" align="middle" style="width:150px;height:150px;display: block;margin-left: auto;margin-right: auto;">
            </h1>
            <h3 align="middle">
                <font face="verdana" color="#1ED761">Login Here!</font>
            </h3>
            <div class="form-group">
                <label for="userId">Email address</label>
                <input type="email" class="form-control" name="userId" id="userId" aria-describedby="emailHelp" placeholder="Enter email" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            </div>
            <div class="form-group">
                <label for="_password">Password</label>
                <input type="password" class="form-control" name="_password" id="_password" placeholder="Password" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
            </div>
            <button type="submit" class="btn btn-primary btn-danger btn-lg btn-block">SUBMIT</button>
            <h5 style="text-align:center;color:#1ED761 ; font-family:verdana">Not Registered Yet!</h5>

            <button type="button" class="btn btn-primary btn-danger btn-lg btn-block" onclick="window.location.href = '../Login/SignUp'">Register!</button>
        </fieldset>
    </form>
</div>
