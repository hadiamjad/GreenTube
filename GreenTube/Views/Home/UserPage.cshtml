@using GreenTube.Models
@model UserData

@{
    ViewBag.Title = "UserPage";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/User.css" />
    <link rel="stylesheet" href="~/Content/loginPage.css" />
</head>

<body>
    @{ UserData info = Model; }


    <!-- this is the markup. you can change the details (your own name, your own avatar etc.) but don’t change the basic structure! -->

    <aside class="profile-card">

        <header>

            <!-- here’s the avatar -->
            <a>
                <img src="http://tiny.cc/9cwt5y" />
            </a>

            <!-- the username -->
            <h1>@info.uemail</h1>
            <hr>
            <!-- and role or location -->
            <h2>UserBirthdate:</h2>
            <h2>@info.ubod</h2>

            <h2>UserJoinDate:</h2>
            <h2>@info.ujoin</h2>

            <button type="button" class="btn btn-primary btn-danger btn-lg btn-block" onclick="window.location.href = '../Home/becomeCreator'">Become Creator</button>
            <button type="button" class="btn btn-primary btn-danger btn-lg btn-block" onclick="window.location.href = '../Home/DeleteUser'">Delete Account!</button>
        </header>
    </aside>
   
</body>
</html>